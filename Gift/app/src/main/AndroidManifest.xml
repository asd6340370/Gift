<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dllo.gift">

    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_gift"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".welcome.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".details.DetailsPurchaseActivity"/>
        <activity android:name=".details.DetailsRaiderActivtiy"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".comments.CommentsActivity"/>
        <activity android:name=".comments.CommentsHotMoreActivity"/>
        <activity android:name=".details.DetailsCategoryRaiderActivity"/>
        <activity android:name=".details.DetailsCategoryGiftActivity"/>
        <activity android:name=".details.DetailsCategoryRaiderSpecialAllActivity"/>
        <activity android:name=".details.DetailsSpecialActivity"/>
        <activity android:name=".comments.CommentsPurchaseActivity"/>
        <activity android:name=".details.DetailsCategoryGiftSelectionActivity"/>
        <activity android:name=".search.SearchActivity"/>
        <activity android:name=".DateActivity"/>
        <activity android:name=".FriendActivity"/>
        <activity android:name=".LogoutActivity"/>
    </application>

</manifest>