<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_and_fifty_dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_selection_discover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_and_fifty_dp"></android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/linearlayout_selected_discover"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ten_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_selection_discover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_dp"></android.support.v7.widget.RecyclerView>

</LinearLayout>