<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/six_dp"
    android:paddingLeft="@dimen/six_dp"
    android:paddingRight="@dimen/six_dp">

    <ImageView
        android:id="@+id/iv_detials_category_raider_specialall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_and_sixty_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_and_sixty_dp"
        android:background="@drawable/shape_round_item_category_raider_specialall"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_title_category_raider_specialall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lift"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_five_sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/ig_topic_horizontal_rule" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_subtitle_category_raider_specialall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:text="@string/life_like"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>