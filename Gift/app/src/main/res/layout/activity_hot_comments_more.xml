<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:background="@color/title_color_red">

        <ImageView
            android:id="@+id/back_hot_comments_title_details"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="@dimen/fifty_dp"
            android:src="@mipmap/ic_action_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="@dimen/one_hundred_and_fifty_dp"
            android:text="@string/hot_comment"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listview_hot_comments_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@null"></ListView>


</LinearLayout>