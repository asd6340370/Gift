<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:padding="@dimen/one_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/seven_dp"
        app:cardCornerRadius="@dimen/eight_dp"
        android:elevation="@dimen/one_dp"
        app:cardPreventCornerOverlap="true"
        >
        <!--cardPreventCornerOverlap 防止角的重合-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shap_round_item_hot">

        <ImageView
            android:id="@+id/iv_gv_hot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_and_fifty_dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_title_gv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_gv_hot"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:text="title"
            android:lines="2"
            android:textColor="@color/color_item_textcolor"
           />

        <TextView
            android:id="@+id/tv_price_gv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_gv_hot"
            android:layout_margin="@dimen/ten_dp"
            android:textSize="@dimen/sixteen_sp"
            android:text="price"
            android:textColor="@color/title_color_red"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_like_gv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_gv_hot"
            android:layout_marginTop="@dimen/twelve_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/three_dp"
            android:textSize="@dimen/twelve_sp"
            android:gravity="center_vertical"
            android:text="like"
            android:textColor="@color/color_text_normal"/>

        <ImageView
            android:id="@+id/iv_like_gv_hot"
            android:layout_width="@dimen/ten_dp"
            android:layout_height="@dimen/ten_dp"
            android:layout_below="@id/tv_title_gv_hot"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:layout_toLeftOf="@id/tv_like_gv_hot"
            android:background="@mipmap/ic_small_heart_normal"
            android:text="like" />


        <!--<CheckBox-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:id="@+id/tv_like_gv_hot"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/tv_title_gv_hot"-->
        <!--android:layout_toRightOf="@id/tv_price_gv_hot"-->
        <!--android:button="@null"-->
        <!--android:background="@drawable/item_like_checkbox"/>-->

    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>