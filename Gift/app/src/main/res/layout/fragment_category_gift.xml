<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_select_category_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@mipmap/gift_category_guide"
        android:drawablePadding="@dimen/six_dp"
        android:drawableRight="@mipmap/ic_chevron_alternative"
        android:gravity="center_vertical"
        android:padding="@dimen/twelve_dp"
        android:paddingEnd="@dimen/twenty_dp"
        android:text="@string/selected_gift"
        android:textSize="@dimen/fifteen_sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/color_grey_tv_background" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/one_dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listView_title_category_gift"
            android:layout_width="@dimen/eighty_dp"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:scrollbars="none">

        </ListView>

        <ListView
            android:id="@+id/listView_content_category_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@null"
            android:scrollbars="none"
            ></ListView>
    </LinearLayout>

</LinearLayout>