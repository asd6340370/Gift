<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_linearlayout_background"
    android:orientation="vertical">

    <TextView

        android:id="@+id/tv_cancel_comments_popupwindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp"
        android:text="@string/cancle"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/ten_dp"
        android:text="@string/write_comment"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sixteen_sp" />

    <TextView
        android:id="@+id/tv_send_comments_popupwindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/ten_dp"
        android:text="@string/tv_text_comment_send"
        android:textColor="@color/color_send_comment_popup" />

    <EditText
        android:id="@+id/et_message_cotent_popupwindow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_dp"
        android:layout_below="@id/tv_cancel_comments_popupwindow"
        android:layout_marginBottom="@dimen/fifteen_dp"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:background="@drawable/shap_round_send_message_comments"
        android:gravity="top"
        android:hint="@string/share_content"
        android:padding="@dimen/ten_dp"
        android:textSize="@dimen/twelve_sp"/>


</RelativeLayout>