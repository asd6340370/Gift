<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fifty_dp"
    android:background="@color/title_color_red"
    >

    <ImageView
        android:id="@+id/date_title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:src="@mipmap/btn_signin" />

    <TextView
        android:id="@+id/tv_title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/gift_say"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_five_sp"
        android:textStyle="normal" />
    <ImageView
        android:id="@+id/iv_search_title"
        android:layout_width="@dimen/twenty_five_dp"
        android:layout_height="@dimen/twenty_five_dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/fifteen_dp"
        android:src="@mipmap/btn_search"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/fifteen_dp"/>


</RelativeLayout>