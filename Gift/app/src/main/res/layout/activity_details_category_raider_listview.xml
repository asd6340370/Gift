<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:background="@color/title_color_red">

        <ImageView
            android:id="@+id/back_details_category_raider_title"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="@dimen/fifteen_dp"
            android:src="@mipmap/ic_action_back" />

        <TextView
            android:id="@+id/tv_title_details_category_raider_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="@dimen/one_hundred_and_fifty_dp"
            android:text="test"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp" />

        <ImageView
            android:id="@+id/menu_sort_details_category_raider_listview"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/fifteen_dp"
            android:src="@mipmap/ic_menu_sort" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listview_details_category_raider_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"></ListView>

</LinearLayout>