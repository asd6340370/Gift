<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_color_red">

        <ImageView
            android:id="@+id/back_search_title"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/ic_action_back" />
        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/et_search_title"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_search"
            android:hint="搜索礼物、攻略"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="150dp"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_tv_tv"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大家都在搜"/>
    <android.support.v7.widget.RecyclerView
        android:paddingTop="10dp"
        android:layout_below="@id/tv_tv_tv"
        android:id="@+id/recyclerview_search"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_below="@id/recyclerview_search"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_select_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@mipmap/gift_category_guide"
        android:drawablePadding="6dp"
        android:drawableRight="@mipmap/ic_chevron_alternative"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:paddingEnd="20dp"
        android:text="使用选礼神器快速挑选礼物"
        android:textSize="15sp" />
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/framelayout_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"></FrameLayout>
    </RelativeLayout>
</LinearLayout>