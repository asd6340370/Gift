<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:background="@color/title_color_red">

        <ImageView
            android:id="@+id/back_search_title"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="@dimen/fifteen_dp"
            android:src="@mipmap/ic_action_back" />
        <EditText
            android:paddingLeft="@dimen/five_dp"
            android:id="@+id/et_search_title"
            android:layout_width="@dimen/two_hundred_fourty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:background="@drawable/shape_search"
            android:hint="@string/search_gift_raider"
            android:textSize="@dimen/twelve_sp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/ten_dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="@dimen/one_hundred_and_fifty_dp"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_tv_tv"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/everyone_search"/>
    <android.support.v7.widget.RecyclerView
        android:paddingTop="@dimen/ten_dp"
        android:layout_below="@id/tv_tv_tv"
        android:id="@+id/recyclerview_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_and_fifty_dp"
        android:background="@color/white">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_below="@id/recyclerview_search"
        android:layout_marginTop="@dimen/ten_dp"
        android:id="@+id/tv_select_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@mipmap/gift_category_guide"
        android:drawablePadding="@dimen/six_dp"
        android:drawableRight="@mipmap/ic_chevron_alternative"
        android:gravity="center_vertical"
        android:padding="@dimen/twelve_dp"
        android:paddingEnd="@dimen/twenty_dp"
        android:text="使用选礼神器快速挑选礼物"
        android:textSize="@dimen/fifteen_sp" />
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/framelayout_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"></FrameLayout>
    </RelativeLayout>
</LinearLayout>